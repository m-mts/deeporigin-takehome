{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "cron": {
      "cache": false,
      "persistent": true
    },
    "dev-docker": {
      "cache": true,
      "persistent": true
    }
  }
}